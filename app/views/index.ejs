<% include header %>


    <div class="container">

      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
        <h2>Get followers by using github user</h2>

          <form action="/github" method="get">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="User name" name="user_name" value="<%= user_name %>">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
          </form>
          <% if(locals.error) { %>
           <p>
             <%= error %>
           </p>
          <% }%>
      </div>
      <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Avatar</th>
                <th>Login</th>
                <th>Url</th>

            </tr>
        </thead>

        <tbody>
          <% followers.forEach(function(follower) { %>
            <tr>

                <td><img src="<%= follower.avatarUrl %>" class="img-responsive col-xs-3"></td>
                <td><%= follower.userName %></td>
                <td><%= follower.url %></td>

            </tr>
          <% }); %>

          </tbody>
        </table>
        <script>
        $(document).ready(function() {
            $('#example').DataTable();
        } );

        </script>
    </div>
<% include footer %>
